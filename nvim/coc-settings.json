{
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "initializationOptions": {
                "inlayHints": {
                    "chainingHints": false,
                    "closingBraceHints": {
                        "enable": true,
                        "minLines": 16
                    },
                    "discriminantHints": false,
                    "parameterHints": false,
                    "typeHints": false
                }
            },
            "rootPatterns": ["Cargo.toml"],
            "settings": {
                "rust-analyzer": {
                    "cargo": {
                        "allFeatures": true
                    },
                    "check": {
                        "allTargets": true
                    },
                    "inlayHints": {
                        "chainingHints": false,
                        "closingBraceHints": {
                            "enable": true,
                            "minLines": 16
                        },
                        "discriminantHints": false,
                        "parameterHints": false,
                        "typeHints": false
                    }
                }
            }
        }
    }
}
